    <script>
      // Infer location
      var locationTimeZone = Intl.DateTimeFormat().resolved.timeZone;
      var loc;
      switch(locationTimeZone){
        case "America/Chicago":
          loc = "Chicago";
          break;
        case "America/New_York":
          loc = "Boston";
          break;
        case "America/Denver":
          loc = "Denver";
          break;
        default:
          loc = "unk";
          break;
      }
