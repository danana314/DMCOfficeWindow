<!DOCTYPE html>
<html lang="en">
  <head>
    <title>DMC Office Window</title>

    <link rel="stylesheet" href="./bootstrap/css/bootstrap.css">
    <link rel="stylesheet" href="./stylesheets/dashboard.css">
    
    <script>
      // Get data from server
      var _officeId = '<%- officeid %>';
      var _offices = [];
      <% for(var i=0; i<offices.length; i++) { %>
        _offices.push({id: '<%- offices[i].id %>', name: '<%- offices[i].name %>', present: false});
      <% } %>
    </script>
  </head>

  <body>

    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">DMC Office Window</a>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Settings<span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li><a href="#">Logged in as <%=offices[officeid-1].name%></a></li>
                <li><a href="#">Another action</a></li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <div class="container-fluid">
      <div class="row">
        <div class="col-md-1 sidebar">
          <ul class="nav nav-sidebar" data-bind="foreach: offices">
            <li data-bind="css: {active: $data.isPresent}">
              <a href="#" data-bind="text: $data.name, click: $parent.callOffice"></a>
            </li>
          </ul>
        </div>

        <!-- Main Body -->
        <div class="col-md-10 col-md-offset-1 main">
          <!-- Videos -->
          <div class="row">
            <div class="col-md-6">
              <video id="their-video" autoplay></video>
            </div>
            <div class="col-md-6">
              <video id="my-video" muted="true" autoplay></video>
            </div>
          </div>

            <!-- Get local audio/video stream -->
            <div id="state_setup">
              <p>Please click 'Allow' at the top of the screen to allow access to webcam and microphone</p>
              <div id="state_setup-error">
                <p>Failed to access the webcam and microphone. Please check permissions.</p>
                <a href="#" class="btn btn-danger" id="state_setup-retry">Try again</a>
              </div>
            </div>

            <!-- Make calls to others -->
            <div id="state_idle">
              <button type="submit" data-bind="click: changePresence1">Presence</button>
              <div class="form-group">
                <input type="text" placeholder="Call user id..." id="callto-id">
                <a href="#" class="btn btn-success" id="make-call">Call</a>
              </div>
            </div>

            <!-- Call in progress -->
            <div id="state_call_in_progress">
              <p>Currently in call with <span id="their-id">...</span></p>
              <p><a href="#" class="btn btn-danger" id="end-call">End call</a></p>
            </div>
        </div>

      </div>
    </div>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="./bootstrap/js/bootstrap.min.js"></script>-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="./bootstrap/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="http://ajax.aspnetcdn.com/ajax/knockout/knockout-3.1.0.debug.js"></script>
    <script type="text/javascript" src="http://cdn.peerjs.com/0.3/peer.js"></script>
    <script type="text/javascript" src="./javascripts/dmcofficewindow.js"> </script>

  </body>
</html>

